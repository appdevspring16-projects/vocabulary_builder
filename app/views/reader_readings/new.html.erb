<!-- Validation failure messages -->
<% if @reader_reading.errors.any? %>
  <% @reader_reading.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Reader Reading</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_reader_reading" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for reader_id -->
      <div class="form-group">
        <label for="reader_id" class="control-label">
          Reader
        </label>

        <input type="text" id="reader_id" name="reader_id" placeholder="Reader" class="form-control" value="<%= @reader_reading.reader_id %>">
      </div>

      <!-- Label and input for reading_id -->
      <div class="form-group">
        <label for="reading_id" class="control-label">
          Reading
        </label>

        <input type="text" id="reading_id" name="reading_id" placeholder="Reading" class="form-control" value="<%= @reader_reading.reading_id %>">
      </div>

      <button class="btn btn-success">
        Create Reader Reading
      </button>
      or
      <a href="/reader_readings">Cancel</a>
    </form>
  </div>
</div>
