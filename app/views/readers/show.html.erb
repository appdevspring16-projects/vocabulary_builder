<div class="page-header">
  <h3>Reader #<%= @reader.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @reader.email %></dd>

      <dt>Password</dt>
      <dd><%= @reader.password %></dd>

      <dt>First name</dt>
      <dd><%= @reader.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @reader.last_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/readers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
