<div class="page-header">
  <h3>Reader #<%= @reader.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @reader.email %></dd>

      <dt>Password</dt>
      <dd><%= @reader.password %></dd>

      <dt>First name</dt>
      <dd><%= @reader.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @reader.last_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/readers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Reader has many reader_words -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Reader Words
      </li>

      <% @reader.reader_words.each do |reader_word| %>
        <li class="list-group-item">
          <a href="/reader_words/<%= reader_word.id %>">
            <%= reader_word.reader_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/reader_words/<%= reader_word.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == reader_word.reader %>
              <a href="/reader_words/<%= reader_word.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_reader_word/<%= reader_word.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Reader has many reader_readings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Reader Readings
      </li>

      <% @reader.reader_readings.each do |reader_reading| %>
        <li class="list-group-item">
          <a href="/reader_readings/<%= reader_reading.id %>">
            <%= reader_reading.reader_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/reader_readings/<%= reader_reading.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == reader_reading.reader %>
              <a href="/reader_readings/<%= reader_reading.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_reader_reading/<%= reader_reading.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
