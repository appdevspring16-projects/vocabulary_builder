<div class="page-header">
  <h1>
    Readers
    <a href="/readers/new" class="btn btn-lg btn-success">New Reader</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Actions</th>
      </tr>

      <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.email %></td>
        <td><%= reader.password %></td>
        <td><%= reader.first_name %></td>
        <td><%= reader.last_name %></td>
        <td>
          <a href="/readers/<%= reader.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @readers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
