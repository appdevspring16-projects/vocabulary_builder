<div class="page-header">
  <h1>
    Reader words
    <a href="/reader_words/new" class="btn btn-lg btn-success">New Reader word</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Reader</th>
        <th>Word</th>
        <th>Reader readings</th>
        <th>Context</th>
        <th>Favorite</th>
        <th>Actions</th>
      </tr>

      <% @reader_words.each do |reader_word| %>
      <tr>
        <td>
          <% if reader_word.reader.present? %>
            <a href="/readers/<%= reader_word.reader.id %>">
              <%= reader_word.reader.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if reader_word.word.present? %>
            <a href="/words/<%= reader_word.word.id %>">
              <%= reader_word.word.word %>
            </a>
          <% end %>
        </td>
        <td>
          <% if reader_word.reader_readings.present? %>
            <a href="/reader_readings/<%= reader_word.reader_readings.id %>">
              <%= reader_word.reader_readings.reader_id %>
            </a>
          <% end %>
        </td>
        <td><%= reader_word.context %></td>
        <td><%= reader_word.favorite %></td>
        <td>
          <a href="/reader_words/<%= reader_word.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == reader_word.reader %>
            <a href="/reader_words/<%= reader_word.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_reader_word/<%= reader_word.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reader_words, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
