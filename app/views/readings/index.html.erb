<div class="page-header">
  <h1>
    Readings
    <a href="/readings/new" class="btn btn-lg btn-success">New Reading</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>More information url</th>
        <th>Author</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.title %></td>
        <td><%= reading.more_information_url %></td>
        <td><%= reading.author.name %></td>
        <td><%= reading.description %></td>
        <td>
          <a href="/readings/<%= reading.id %>" class="btn btn-primary">Show</a>
          <a href="/readings/<%= reading.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_reading/<%= reading.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @readings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
