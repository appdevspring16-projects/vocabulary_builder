<!-- Validation failure messages -->
<% if @reading_word.errors.any? %>
  <% @reading_word.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Reading Word #<%= @reading_word.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_reading_word/<%= @reading_word.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for word_id -->
      <div class="form-group">
        <label for="word_id" class="control-label">
          Word
        </label>

        <%= select_tag(:word_id, options_from_collection_for_select(Word.all, :id, :word, @reading_word.word_id), :class => "form-control") %>
      </div>

      <!-- Label and input for reading_id -->
      <div class="form-group">
        <label for="reading_id" class="control-label">
          Reading
        </label>

        <input type="text" id="reading_id" name="reading_id" placeholder="Reading" class="form-control" value="<%= @reading_word.reading_id %>">
      </div>

      <button class="btn btn-warning">
        Update Reading Word
      </button>
      or
      <a href="/reading_words/<%= @reading_word.id %>">Cancel</a>
    </form>
  </div>
</div>
