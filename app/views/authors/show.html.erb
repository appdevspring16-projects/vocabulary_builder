<div class="page-header">
  <h3>Author #<%= @author.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @author.name %></dd>

      <dt>Bio</dt>
      <dd><%= @author.bio %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/authors" class="btn btn-primary">
        Back
      </a>
      <a href="/authors/<%= @author.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_author/<%= @author.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Author has many readings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Readings
      </li>

      <% @author.readings.each do |reading| %>
        <li class="list-group-item">
          <a href="/readings/<%= reading.id %>">
            <%= reading.title %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/readings/<%= reading.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/readings/<%= reading.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_reading/<%= reading.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_reading" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="">
      </div>

      <!-- Label and input for more_information_url -->
      <div class="form-group">
        <label for="more_information_url" class="control-label">
          More information url
        </label>

        <input type="text" id="more_information_url" name="more_information_url" placeholder="More information url" class="form-control" value="">
      </div>

      <!-- Label and input for author_id -->
      <input type="hidden" name="author_id" value="<%= @author.id %>">

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create Reading
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
